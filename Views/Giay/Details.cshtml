        <dd>
            @Html.DisplayFor(model => model.THANHTOANON)
        </dd>
        <dt>
            Hình ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/img/"+  Model.HINHANH)" width="180" />
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
