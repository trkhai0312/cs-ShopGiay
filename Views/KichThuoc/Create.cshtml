@model ShopGiay.Models.KICHTHUOC

@{
    ViewBag.Title = "Trang thêm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG THÊM KÍCH THƯỚC GIÀY</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label><strong>Tên Giày:</strong></label>
        <div class="col-md-10">
            @Html.DropDownList("MAGIAY")
        </div>
    </div>
    <div class="form-group">
        <label><strong>Size Giày:</strong></label>
        @Html.ValidationMessageFor(model => model.TENKICHTHUOC, "", new { @class = "text-danger" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TENKICHTHUOC, new { htmlAttributes = new { @class = "form-control" }, @Required = "required" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo mới" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại trang quản lý", "Index")
        </div>
    </div>
</div>
}

