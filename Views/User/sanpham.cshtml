                                            </div>
                                        </div>
                                    </div>
                                    <div class="grid__item large--one-whole medium--one-half small--one-whole">
                                        <div class="collection-filter-type">
                                            <button class="accordion cs-title col-sb-trigger">
                                                <span>Loại sản phẩm</span>
                                            </button>
                                            <div class="panel sidebar-sort">
                                                @Html.Action("loai")

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
